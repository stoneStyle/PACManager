<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFF">
	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:background="@drawable/button_normal"
		android:id="@+id/layout_reg_title">
		<TextView
			android:id="@+id/text_title"
			android:text="民警注册"
			android:textColor="#FFFFFF"
			android:textSize="18dip"
			android:background="@drawable/button_normal"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</RelativeLayout>
	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/RegScrollView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/layout_reg_title"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:scrollbars="vertical">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<!--警号  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_policecode">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 输入警号："
					android:id="@+id/tip_policecode" />
				<EditText
					android:layout_toRightOf="@id/tip_policecode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_police_code"
					android:hint="请输入民警编号" />
			</LinearLayout>
			<!--隶属辖区  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_policearea">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 隶属辖区："
					android:id="@+id/tip_policearea" />
				<EditText
					android:layout_toRightOf="@id/tip_policearea"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:editable="false"
					android:id="@+id/edit_police_area"
					android:hint="隶属辖区" />
			</LinearLayout>
			<!--姓名 -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_police_name">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 民警姓名："
					android:id="@+id/tip_police_name" />
				<EditText
					android:layout_toRightOf="@id/tip_police_name"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_police_name"
					android:hint="隶属辖区" />
			</LinearLayout>
			<!--联系电话  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_police_phonenumber">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 联系电话："
					android:id="@+id/tip_police_phonenumber" />
				<EditText
					android:layout_toRightOf="@id/tip_police_phonenumber"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:inputType="phone"
					android:id="@+id/edit_police_phonenumber"
					android:hint="110" />
			</LinearLayout>
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line__police_img">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 民警照片："
					android:id="@+id/tip_police_img" />
				<ImageView
					android:layout_toRightOf="@id/tip_police_img"
					android:layout_width="50dip"
					android:layout_height="50dip"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:editable="false"
					android:id="@+id/imgv_police_img"
					android:hint="110" />
			</LinearLayout>
			<Button
			android:layout_marginTop="10dip"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="注册新民警"
			android:id="@+id/btn_add_police"
			/>
		</LinearLayout>
	</ScrollView>
</LinearLayout>