<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="#FFFFFF">
	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="40dip"
		android:background="@drawable/button_normal"
		android:id="@+id/layout_reg_title">
		<TextView
			android:id="@+id/text_title"
			android:text="企业注册"
			android:textColor="#FFFFFF"
			android:textSize="18dip"
			android:background="@drawable/button_normal"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	</RelativeLayout>
	<ScrollView
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/RegScrollView"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/layout_reg_title"
		android:layout_marginLeft="10dip"
		android:layout_marginRight="10dip"
		android:scrollbars="vertical">
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<!--企业编号  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_companycode">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 企业编号："
					android:id="@+id/tip_companycode" />
				<EditText
					android:layout_toRightOf="@id/tip_companycode"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_companycode"
					android:hint="请输入企业编号" />
			</LinearLayout>
			<!--企业类型-->
			<Spinner
				android:id="@+id/spinner_company_type"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content" />
			<!--企业名称 -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_companyname">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 企业名称："
					android:id="@+id/tip_companyname" />
				<EditText
					android:layout_toRightOf="@id/tip_companyname"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_company_name"
					android:hint="请输入企业名称" />
			</LinearLayout>
			<!--完整地址  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_companyaddress">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 完整地址："
					android:id="@+id/tip_companyaddress" />
				<EditText
					android:layout_toRightOf="@id/tip_companyaddress"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_companyaddress"
					android:hint="110" />
			</LinearLayout>
			<!--企业辖区 -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_company_area">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 隶属辖区："
					android:id="@+id/tip_company_area" />
				<EditText
					android:layout_toRightOf="@id/tip_company_area"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:editable="false"
					android:id="@+id/edit_company_area"
					android:hint="隶属辖区" />
			</LinearLayout>
			<!-- 企业门面照片 -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_company_img">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 企业门面照片："
					android:id="@+id/tip_company_img" />
				<ImageView
					android:layout_toRightOf="@id/tip_company_img"
					android:layout_width="50dip"
					android:layout_height="50dip"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:editable="false"
					android:id="@+id/imgv_company_img"
					android:hint="110" />
			</LinearLayout>
			<!--企业法人-->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_company_legel_person">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 企业法人："
					android:id="@+id/tip_company_legel_person" />
				<EditText
					android:layout_toRightOf="@id/tip_company_legel_person"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_company_legel_person"
					android:hint="输入企业法人" />
			</LinearLayout>
			<!--治安负责人-->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_company_security_person">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 治安负责人:"
					android:id="@+id/tip_company_security_person" />
				<EditText
					android:layout_toRightOf="@id/tip_company_security_person"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:id="@+id/edit_company_security_person"
					android:hint="请输入治安负责人" />
			</LinearLayout>
			<!--企业联系电话  -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_company_phonenumber">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 联系电话："
					android:id="@+id/tip_company_phonenumber" />
				<EditText
					android:layout_toRightOf="@id/tip_company_phonenumber"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:inputType="phone"
					android:id="@+id/edit_company_phonenumber"
					android:hint="110" />
			</LinearLayout>
			<!--登记人 -->
			<LinearLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5dip"
				android:layout_marginRight="5dip"
				android:orientation="horizontal"
				android:id="@+id/line_creater">
				<TextView
					android:textSize="18dip"
					android:layout_centerInParent="true"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerVertical="true"
					android:text=" 联系电话："
					android:id="@+id/tip_creater" />
				<EditText
					android:layout_toRightOf="@id/tip_creater"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dip"
					android:layout_centerVertical="true"
					android:layout_weight="2"
					android:inputType="phone"
					android:id="@+id/edit_creater"
					android:hint="110" />
			</LinearLayout>
			<Button
				android:layout_marginTop="10dip"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="注册新企业"
				android:id="@+id/btn_add_company" />
		</LinearLayout>
	</ScrollView>
</LinearLayout>